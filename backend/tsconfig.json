{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "lib": [
      "ES2021.String"
    ]
  },
  "typeRoots": [
    "./src/types",
    "./node_modules/@types"
  ]
}